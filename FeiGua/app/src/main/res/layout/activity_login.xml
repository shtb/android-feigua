<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="@drawable/book">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:checked="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="用户名："
        android:id="@+id/username"
        android:layout_alignTop="@+id/editText_name_r"
        android:layout_toLeftOf="@+id/button_login"
        android:layout_toStartOf="@+id/button_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="密码："
        android:id="@+id/password"
        android:layout_alignBaseline="@+id/editText_password_r"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="立即登录"
        android:id="@+id/button_login"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/button_getuser"
        android:layout_alignStart="@+id/button_getuser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="注册用户"
        android:id="@+id/button_getuser"
        android:layout_below="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="记住密码："
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/switch1"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignLeft="@+id/editText_password_r"
        android:layout_alignStart="@+id/editText_password_r" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_name_r"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/editText_password_r"
        android:layout_toRightOf="@+id/username"
        android:layout_toEndOf="@+id/username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password_r"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/switch1"
        android:layout_alignLeft="@+id/editText_name_r"
        android:layout_alignStart="@+id/editText_name_r" />

</RelativeLayout>
