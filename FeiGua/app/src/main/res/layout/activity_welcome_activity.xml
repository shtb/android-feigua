<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shtb.feigua.welcome_activity"
    android:background="@drawable/book">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="26sp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="      线下活动      "
        android:id="@+id/button_getclass"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="      我的活动      "
        android:id="@+id/button_lookclass"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:id="@+id/button_care"
        android:layout_alignTop="@+id/button_liuyan"
        android:layout_alignLeft="@+id/button_lookclass"
        android:layout_alignStart="@+id/button_lookclass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   留言   "
        android:id="@+id/button_liuyan"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_lookclass"
        android:layout_alignEnd="@+id/button_lookclass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="      发布活动      "
        android:id="@+id/button"
        android:layout_below="@+id/button_getclass"
        android:layout_alignRight="@+id/button_getclass"
        android:layout_alignEnd="@+id/button_getclass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="学习交流"
        android:id="@+id/button_title"
        android:layout_above="@+id/button_getclass"
        android:layout_alignLeft="@+id/button_getclass"
        android:layout_alignStart="@+id/button_getclass"
        android:layout_alignRight="@+id/button_getclass"
        android:layout_alignEnd="@+id/button_getclass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="上传资料"
        android:id="@+id/button2"
        android:layout_above="@+id/button_title"
        android:layout_alignLeft="@+id/button_title"
        android:layout_alignStart="@+id/button_title"
        android:layout_alignRight="@+id/button_title"
        android:layout_alignEnd="@+id/button_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="资料下载"
        android:id="@+id/button3"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

</RelativeLayout>
